<div class="destination-wrap">

  <h3><%= destination.name %></h3>
  <img class="img-destination" src="<%= destination.image_url %>"/>

  <div id="<%= to_do_item_id(destination) %>">
    <%= render destination.to_do_items %>
  </div>

  <div class="to-do-item-form">
    <%= form_for make_to_do_item(destination), url: destination_to_do_items_path( destination ), :remote => true do |f| %>

      <%= field_set_tag do %>
      <%= f.label :title %>
    <%= f.text_field :title %>
  <% end %>

    <%= field_set_tag do %>
      <%= f.label :description %>
    <%= f.text_field :description %>
  <% end %>

    <%= f.hidden_field :destination_id %>

    <%= f.submit "Create To Do Item" %>

  <% end %>
  </div>
</div>
