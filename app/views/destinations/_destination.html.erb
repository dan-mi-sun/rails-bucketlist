<div class="destination-wrap">

  <h3><%= destination.name %></h3>
  <img class="img-destination" src="<%= destination.image_url %>"/>

  <ul>
  <% destination.to_do_items.each do |item| %>
    <article class="to-dos">
    <li><%= item.title %></li>
    <li><%= item.description %></li>
    </article>
  <% end %>
  </ul>

  <%= form_for new_to_do_item, url: destination_to_do_items_path( destination ), :remote => true do |f| %>

    <%= field_set_tag do %>
      <%= f.label :title %>
      <%= f.text_field :title %>
    <% end %>

    <%= field_set_tag do %>
      <%= f.label :description %>
      <%= f.text_field :description %>
    <% end %>

    <%= f.hidden_field :destination_id %>

    <%= f.submit "Add To Do Item" %>

  <% end %>
</div>
